---
import createSEOData from '@components/AstroSEO/data/astro-seo'
import type { BaseProps } from '@scripts/types/types'
import { SEO } from 'astro-seo'

type Props = Omit<BaseProps, 'className'>

const { id = "default", lang = "en" } = Astro.props
const data = createSEOData(id, lang)
---

<SEO
    title={data.title}
    titleTemplate={data.titleTemplate}
    titleDefault={data.titleDefault}
    charset={data.charset}
    description={data.description}
    extend={{
        link: data.link,
        meta: data.meta
    }}
    nofollow={data.nofollow}
    noindex={data.noindex}
    openGraph={data.openGraph}
    twitter={data.twitter}
    />
</SEO>