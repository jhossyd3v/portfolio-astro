---
import seoData from './data/astro-seo.js'
import { SEO } from 'astro-seo'

type Props = {
  seoID?: string
  iconType?: string
  lang?: string
}

/*
  Page property allows component to get the correct data (title, facebook and instagram props) according the page where is going to be implemented
*/
const { seoID = 'default', iconType = 'ico', lang = 'en' } = Astro.props
---

<SEO
    title={seoData.pages[seoID][lang].title}
    titleTemplate={seoData.titleTemplate}
    titleDefault={seoData.titleDefault}
    charset={seoData.charset}
    description={seoData.pages[seoID][lang].description}
    extend={{
        link: seoData.link[{ iconType }],
        meta: seoData.meta
    }}
    nofollow={seoData.nofollow}
    noindex={seoData.noindex}
    openGraph={seoData.pages[seoID][lang].openGraph}
    twitter={seoData.pages[seoID][lang].twitter}
    />
</SEO>